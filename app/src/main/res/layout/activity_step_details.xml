<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StepDetails">

    <FrameLayout
        android:id="@+id/master_step_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:id="@+id/backBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@color/colorPrimary"
            android:drawableLeft="@drawable/backward"
            android:onClick="back"
            android:paddingStart="@dimen/btn_padding"
            android:text="@string/prev"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/nextBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@color/colorPrimary"
            android:drawableRight="@drawable/forward"
            android:onClick="next"
            android:paddingEnd="@dimen/btn_padding"
            android:text="@string/next"
            android:textColor="@android:color/white" />
    </LinearLayout>

</RelativeLayout>